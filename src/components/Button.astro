---
import { FaDiscord } from "react-icons/fa";
---

<button type="button" class="discord-btn">
    <FaDiscord size="2rem" />
    <span><slot /></span>
</button>
<style>
    .discord-btn {
        background-color: #b093ff;
        padding: 15px 25px;
        font-size: 20px;
        cursor: pointer;
        border-radius: 2px;
        display: inline-flex;
        color: black;
        align-items: center;
        box-shadow:
            0px 2px 2px 1px rgba(0, 0, 0, 0.5),
            inset 0px -3px 6px -2px rgba(0, 0, 0, 0.3);
        transition: all 0.5s;

        span {
            padding: 0 1em;
        }
    }
    .discord-btn:hover {
        background-color: #7f68bd;
    }
</style>
