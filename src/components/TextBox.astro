---
const { heading, text, smallText, margin } = Astro.props;
---

<div class="text">
    <h3>{heading}</h3>
    <p>
        {text}
    </p>
    <p class="bottom">
        <small>{smallText}</small>
    </p>
</div>

<style define:vars={{ margin }}>
    .text {
        width: 70%;
        text-align: center;
        margin: var(--margin);
        background-color: thistle;
        height: fit-content;
        padding: 30px 35px;
        border-radius: 20px;
        border: 1px solid;

        h3 {
            padding: 20px;
            font-size: 24px;
            text-decoration: underline;
        }
        p {
            text-align: left;
        }
    }
    .bottom {
        text-align: center;
        margin-top: 10px;
    }
</style>
