---
const { heading, text, smallText, margin } = Astro.props;
---

<div class="text" style=`${margin}`>
    <h3>{heading}</h3>
    <p>
        {text}
    </p>
    <p style="text-align: center; margin-top: 10px;">
        <small>{smallText}</small>
    </p>
</div>

<style>
    .text {
        width: 70%;
        text-align: center;
        /* margin-left: -10%; */
        background-color: thistle;
        height: fit-content;
        padding: 30px 35px;
        border-radius: 20px;
        border: 1px solid;
        /* margin-left: auto; */
        h3 {
            padding: 20px;
            font-size: 24px;
            text-decoration: underline;
        }
        p {
            text-align: left;
        }
    }
</style>
