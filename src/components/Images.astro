---
const { src, alt, margin } = Astro.props;
---

<div class="image">
    <img src={src} alt={alt} />
</div>

<style define:vars={{ margin }}>
    .image {
        width: 50%;
        height: 40%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: var(--margin);
        img {
            width: 100%;
            height: 100%;
            object-fit: contain;
        }
    }
</style>
