---
import Button from "@components/Button.astro";
---

<div class="headline">
    <div class="top-text">
        <h1>
            <span class="marker"
                >VTuberやクリエイターの<br
                />活動を支援するバーチャル区役所</span
            >
        </h1>
    </div>
    <p class="desc">
        「案件紹介」だけでなく「制作サポート」や「福祉サポート」など、みなさんの活動に更に寄り添ったサポートができるのがV区の強みです。
    </p>
    <div class="btn-place">
        <Button>Discordへ</Button>
    </div>
</div>

<style>
    .headline {
        color: white;
        width: 100%;
        height: 100%;
        /* padding-top: 80px; */
        /* 80 ~ 90 */
        padding-top: clamp(5rem, 4.741rem + 1.1vw, 5.625rem);
        position: relative;
        .top-text {
            padding: 100px 0 60px 0;
            h1 {
                /* font-size: 26px; */
                /* 26 ~ 48px, 375 ~ 1280 */
                font-size: clamp(1.625rem, 1.055rem + 2.43vw, 3rem);
                line-height: 1.5;
                width: 95%;
            }
        }
    }
    .marker {
        background: linear-gradient(transparent 60%, #f2cf39 0%);
        display: inline;
        padding: 0 5px 0;
        background-repeat: no-repeat;
    }
    .btn-place {
        width: 100%;
        text-align: center;
        position: absolute;
        bottom: 4rem;
        .discord-btn {
            font-size: clamp(1.25rem, 1.121rem + 0.55vw, 1.563rem);
        }
    }
    .desc {
        width: 100%;
        /* font-size: 16px; */
        /* 16 ~ 20 */
        font-size: clamp(1rem, 0.896rem + 0.44vw, 1.25rem);
        text-align: justify;
        background-color: rgba(0, 0, 0, 0.5);
        padding: 10px;
        border: 1px solid whitesmoke;
        border-radius: 2px;
    }

    /* タブレット */
    @media screen and (min-width: 768px) {
        .headline {
            /* padding-top: 90px; */
            .top-text {
                padding: 100px 0 60px 0;
                h1 {
                    /* font-size: 5vw; */
                    line-height: 1.8;
                    width: 100%;
                    text-align: center;
                }
            }
        }

        .btn-place {
            width: 100%;
            text-align: center;
            position: absolute;
            bottom: 4rem;
            .discord-btn {
                /* font-size: 25px; */
                padding: 15px 30px;
            }
        }

        .desc {
            width: 75%;
            margin: 0 auto;
            /* font-size: 2vw; */
            text-align: justify;
            background-color: rgba(0, 0, 0, 0.5);
            padding: 0.5em 1em;
            border: 1px solid whitesmoke;
            border-radius: 2px;
        }
    }

    /* デスクトップ */
    @media screen and (min-width: 1280px) {
        .headline {
            .top-text {
                padding: 80px 0 60px 0;
                h1 {
                    /* font-size: 48px; */
                    line-height: 1.8;
                    width: 100%;
                    text-align: left;
                }
            }
            .desc {
                width: 75%;
                margin-right: 0;
                /* font-size: 20px; */
                text-align: justify;
                background-color: rgba(0, 0, 0, 0.5);
                padding: 1em;
                border: 1px solid whitesmoke;
                border-radius: 2px;
            }
        }
        .btn-place {
            width: 100%;
            text-align: right;
            position: absolute;
            bottom: 2rem;
            .discord-btn {
                padding: 15px 30px;
            }
        }
    }
</style>
