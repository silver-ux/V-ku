---
import Button from "@components/Button.astro";
---

<div class="main-wrap">
    <div class="main-text">
        <h1>
            <span class="marker"
                >VTuberやクリエイターの<br
                />活動を支援するバーチャル区役所</span
            >
        </h1>
    </div>
    <p class="main-desc">
        「案件紹介」だけでなく「制作サポート」や「福祉サポート」など、みなさんの活動に更に寄り添ったサポートができるのがV区の強みです。
    </p>
    <div class="btn-place">
        <Button>Discordへ</Button>
    </div>
</div>

<style>
    .main-wrap {
        color: white;
        width: 100%;
        height: 100%;
        /* padding-top: 80px; */
        /* 80 ~ 90 */
        padding-top: clamp(5rem, 4.741rem + 1.1vw, 5.625rem);
        position: relative;
        /* display: grid;
        place-content: center; */
        .main-text {
            padding: 50px 0 60px 0;
            h1 {
                /* 24 ~ 45px, 375 ~ 1280 */
                line-height: 1.5;
                width: 90%;
                text-shadow: 2px 2px 0 black;
                margin: 0 auto;
            }
        }
    }

    .btn-place {
        width: 100%;
        text-align: center;
        position: absolute;
        bottom: 4rem;
        /* .discord-btn {
            font-size: clamp(1.25rem, 1.121rem + 0.55vw, 1.563rem);
        } */
    }
    .main-desc {
        width: 100%;
        font-weight: 400;
        font-size: clamp(0.875rem, 0.786rem + 0.38vw, 1rem);
        letter-spacing: 0.3px;
        text-align: justify;
        background-color: rgba(0, 0, 0, 0.5);
        padding: 10px;
        border-radius: 2px;
    }

    /* タブレット */
    @media screen and (min-width: 768px) {
        .main-wrap {
            .main-text {
                padding: 100px 0 60px 0;
                h1 {
                    /* font-size: 5vw; */
                    line-height: 1.8;
                    width: 100%;
                    text-align: center;
                }
            }
        }

        .btn-place {
            width: 100%;
            text-align: center;
            position: absolute;
            bottom: 4rem;
            .discord-btn {
                /* font-size: 25px; */
                padding: 15px 30px;
            }
        }

        .main-desc {
            width: 75%;
            margin: 0 auto;
            /* font-size: 2vw; */
            text-align: justify;
            background-color: rgba(0, 0, 0, 0.5);
            padding: 0.5em 1em;
            border-radius: 2px;
        }
    }

    /* デスクトップ */
    @media screen and (min-width: 1280px) {
        .main-wrap {
            .main-text {
                padding: 80px 0 60px 0;
                h1 {
                    /* font-size: 48px; */
                    line-height: 1.8;
                    width: 100%;
                    text-align: left;
                    text-shadow: 3px 3px 0 black;
                }
            }
            .main-desc {
                width: 64%;
                margin-right: 0;
                /* font-size: 20px; */
                text-align: justify;
                background-color: rgba(0, 0, 0, 0.5);
                padding: 1em;
                border-radius: 2px;
            }
        }
        .btn-place {
            width: 100%;
            text-align: right;
            position: absolute;
            bottom: 3rem;
            .discord-btn {
                padding: 15px 30px;
            }
        }
    }
</style>
