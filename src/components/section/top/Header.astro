---
import Container from "@layouts/Container.astro";
import logo from "@assets/V区ロゴ/vku_w_width.png";
---

<div id="hamburger">
    <span></span>
    <span></span>
</div>

<ul id="nav">
    <li><a href="#anken">案件</a></li>
    <li><a href="#movie">動画依頼</a></li>
    <li><a href="#support">福祉サポート</a></li>
</ul>

<header>
    <Container>
        <div class="wrap">
            <div class="logo"><img src={logo.src} alt="" /></div>

            <nav>
                <ul>
                    <li><a href="#anken">案件</a></li>
                    <li><a href="#movie">動画依頼</a></li>
                    <li><a href="#support">福祉サポート</a></li>
                </ul>
            </nav>
        </div>
    </Container>
</header>

<script>
    const ham = document.getElementById("hamburger");
    const nav = document.getElementById("nav");
    const body = document.body;

    ham?.addEventListener("click", () => {
        if (body && window.getComputedStyle(body).overflow === "hidden") {
            body.style.overflow = "visible";
        } else {
            body.style.overflow = "hidden";
        }

        nav?.classList.toggle("active");
    });

    nav?.addEventListener("click", () => {
        if (body && window.getComputedStyle(body).overflow === "hidden") {
            body.style.overflow = "visible";
        } else {
            return;
        }
        nav.classList.remove("active");
    });
</script>
<style>
    header {
        width: 100%;
    }
    .wrap {
        width: 100%;
        height: 80px;
        padding: 10px;
        margin-top: 2px;
        border-radius: 2px;
        border: 1px solid whitesmoke;
        background-color: rgba(0, 0, 0, 0.65);
        display: flex;
        align-items: center;

        nav {
            opacity: 0;
            visibility: hidden;
        }

        .logo {
            /* width: 200px; */
            width: 120px;
            display: flex;
            align-items: center;
            img {
                width: 100%;
                height: 100%;
                object-fit: cover;
            }
        }
    }

    #hamburger {
        display: flex;
        flex-direction: column;
        justify-content: space-around;
        place-content: center;
        width: 50px;
        height: 50px;
        padding: 12px;
        background-color: black;
        position: fixed;
        top: 20px;
        right: 7%;
        cursor: pointer;
        z-index: 999;

        span {
            display: block;
            margin: 5px 0;
            height: 2px;
            width: 100%;
            background-color: white;
        }
    }

    #nav {
        opacity: 0;
        visibility: hidden;
        background-color: rgba(255, 255, 255, 0.879);
        position: fixed;
        inset: 0;
        height: 100vh;
        text-align: center;
        z-index: 20;
        transition: all 0.3s ease;
        padding-top: 90px;

        li a {
            display: block;
            font-size: 20px;
            margin: 1rem 0;
            padding: 10px 0;
            color: black;
            cursor: pointer;
            border-bottom: 1px solid #333;
            font-weight: bold;
        }
    }

    #nav.active {
        opacity: 1;
        visibility: visible;
    }

    /* タブレット */
    @media screen and (min-width: 768px) {
        .wrap {
            padding: 15px;
            height: 90px;

            justify-content: space-between;
            .logo {
                width: 150px;
            }

            nav {
                opacity: 1;
                visibility: visible;
            }
        }
        #hamburger {
            opacity: 0;
            visibility: hidden;
        }
    }
</style>
