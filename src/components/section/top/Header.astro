---
import Container from "@layouts/Container.astro";
import logo from "@assets/V区ロゴ/vku_w_width.png";
---

<header>
    <Container>
        <div class="wrap">
            <div class="logo"><img src={logo.src} alt="" /></div>
            <div id="hamburger">
                <span></span>
                <span></span>
            </div>
        </div>
        <nav id="nav">
            <ul>
                <li><a href="#anken">案件</a></li>
                <li><a href="#movie">動画依頼</a></li>
                <li><a href="#support">福祉サポート</a></li>
            </ul>
        </nav>
    </Container>
</header>

<script>
    const ham = document.getElementById("hamburger");
    const nav = document.getElementById("nav");

    ham?.addEventListener("click", () => {
        ham.classList.toggle("hide");
        nav?.classList.toggle("hide");
    });
</script>
<style>
    header {
        width: 100%;
    }
    .wrap {
        /* height: 100px; */
        height: 80px;
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 10px;
        margin-top: 2px;
        border-radius: 2px;
        border: 1px solid whitesmoke;
        background-color: rgba(0, 0, 0, 0.65);

        .logo {
            /* width: 200px; */
            width: 120px;
            display: flex;
            align-items: center;
            img {
                width: 100%;
                height: 100%;
                object-fit: cover;
            }
        }
    }

    #hamburger {
        display: flex;
        flex-direction: column;
        justify-content: space-around;
        place-content: center;
        width: 50px;
        height: 50px;
        padding: 12px;
        position: absolute;
        top: 20px;
        right: 20px;
        cursor: pointer;
        z-index: 999;

        span {
            display: block;
            margin: 5px 0;
            height: 2px;
            width: 100%;
            background-color: white;
        }
    }
    #hamburger.hide {
        background-color: black;
    }
    nav {
        opacity: 0;
        visibility: hidden;
        background-color: rgba(255, 255, 255, 0.879);
        position: fixed;
        inset: 0;
        height: 50vh;
        text-align: center;
        z-index: 20;
        transition: all 0.3s ease;
        padding-top: 90px;
        ul {
            li a {
                display: block;
                font-size: 20px;
                margin: 1rem 0;
                color: black;
                cursor: pointer;
                background-color: rgba(0, 0, 0, 0.158);
            }
        }
    }

    nav.hide {
        opacity: 1;
        visibility: visible;
    }
</style>
