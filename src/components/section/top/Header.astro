---
import Container from "@layouts/Container.astro";
import logo from "@assets/V区ロゴ/vku_w_width.png";
---

<div id="hamburger">
    <span class="span1"></span>
    <span class="span2"></span>
</div>

<ul id="nav">
    <li><a href="/#anken">案件</a></li>
    <li><a href="/#movie">制作依頼</a></li>
    <li><a href="/#support">福祉サポート</a></li>
</ul>

<header>
    <Container>
        <div class="header-wrap">
            <a href="/" class="header-logo"><img src={logo.src} alt="" /></a>

            <nav>
                <ul>
                    <li><a href="/#anken">案件</a></li>
                    <li><a href="/#movie">制作依頼</a></li>
                    <li><a href="/#support">福祉サポート</a></li>
                </ul>
            </nav>
        </div>
    </Container>
</header>

<script>
    const ham = document.getElementById("hamburger");
    const nav = document.getElementById("nav");
    const body = document.body;

    ham?.addEventListener("click", () => {
        if (body && window.getComputedStyle(body).overflow === "hidden") {
            body.style.overflow = "visible";
        } else {
            body.style.overflow = "hidden";
        }

        nav?.classList.toggle("active");
        ham.classList.toggle("close");
    });

    nav?.addEventListener("click", () => {
        if (body && window.getComputedStyle(body).overflow === "hidden") {
            body.style.overflow = "visible";
        } else {
            return;
        }
        nav.classList.remove("active");
        ham?.classList.remove("close");
    });
</script>
<style>
    header {
        width: 100%;
        background-color: rgba(0, 0, 0, 0.6);
        /* border-bottom: 0.2px solid whitesmoke; */
    }
    .header-wrap {
        width: 100%;
        height: 80px;
        padding: 10px;
        border-radius: 2px;
        display: flex;
        align-items: center;

        nav {
            opacity: 0;
            visibility: hidden;
        }

        .header-logo {
            /* width: 200px; */
            width: 120px;
            display: flex;
            align-items: center;
            transition: transform 0.5s ease;
            img {
                width: 100%;
                height: 100%;
                object-fit: cover;
            }
        }
        .header-logo:hover {
            transform: scale(1.1);
        }
    }

    #hamburger {
        display: flex;
        flex-direction: column;
        justify-content: space-around;
        place-content: center;
        width: 40px;
        height: 40px;
        padding: 12px;
        background-color: black;
        position: fixed;
        top: 20px;
        right: 7%;
        cursor: pointer;
        z-index: 999;

        span {
            display: block;
            margin: 3px 0;
            height: 2px;
            width: 100%;
            background-color: white;
        }
    }
    #hamburger.close {
        padding: 0;
        transform-origin: top left;
        span {
            margin: 0;
            width: 50%;
        }
        .span1 {
            position: absolute;
            left: 10px;
            transform: rotate(45deg);
        }
        .span2 {
            transform: rotate(-45deg);
            position: absolute;
            right: 10px;
        }
    }

    #nav {
        opacity: 0;
        visibility: hidden;
        background-color: rgba(255, 255, 255, 0.879);
        position: fixed;
        inset: 0;
        height: 100vh;
        text-align: center;
        z-index: 20;
        transition: all 0.3s ease;
        padding-top: 90px;

        li a {
            display: block;
            font-size: 20px;
            margin: 1rem 0;
            padding: 10px 0;
            color: black;
            cursor: pointer;
            border-bottom: 1px solid #333;
            font-weight: bold;
        }
    }

    #nav.active {
        opacity: 1;
        visibility: visible;
    }

    /* タブレット */
    @media screen and (min-width: 768px) {
        .header-wrap {
            padding: 15px 25px;
            height: 90px;

            justify-content: space-between;
            .header-logo {
                width: 150px;
            }

            nav {
                opacity: 1;
                visibility: visible;
                ul {
                    display: flex;
                    li {
                        margin: 0 20px;
                        a {
                            transition: all 0.5s;
                        }
                        a:hover {
                            opacity: 0.7;
                        }
                    }
                }
            }
        }
        #hamburger {
            opacity: 0;
            visibility: hidden;
        }
    }
</style>
