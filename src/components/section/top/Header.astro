---
import Container from "@layouts/Container.astro";
import logo from "@assets/V区ロゴ/vku_w_width.png";
---

<header>
    <Container>
        <div class="wrap">
            <div class="logo"><img src={logo.src} alt="" /></div>
            <nav>
                <ul>
                    <li><a href="#anken">案件</a></li>
                    <li><a href="#movie">動画依頼</a></li>
                    <li><a href="#support">福祉サポート</a></li>
                </ul>
            </nav>
        </div>
    </Container>
</header>
<style>
    header {
        width: 100%;
    }
    .wrap {
        height: 100px;
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 10px 20px;
        margin-top: 2px;
        border-radius: 10px;
        border: 1px solid whitesmoke;
        background-color: rgba(0, 0, 0, 0.65);

        .logo {
            width: 200px;
            height: 80%;
            img {
                width: 100%;
                height: 100%;
                object-fit: cover;
            }
        }
        nav {
            ul li {
                font-size: 14px;
                color: white;
                margin: 5px;
            }
        }
    }
</style>
