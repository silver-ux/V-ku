---
import Heading from "@components/Heading.astro";
import Container from "@layouts/Container.astro";
import movieIMG from "@assets/vku_seisakuka.png";
import TextBox from "@components/TextBox.astro";
import Images from "@components/Images.astro";
---

<div
    id="movie"
    style="height:100vh; width:100%;padding-bottom: 50px; background-color:gray;"
>
    <Container>
        <Heading>動画制作などの依頼</Heading>
        <div
            style=" display:flex; flex-direction: column-reverse; align-items:center; height:calc(100% - 122px);"
        >
            <TextBox
                style="margin: 0 auto 0 0"
                heading="動画制作などの依頼ができます。"
                text="V区民は格安の価格帯で、切り抜き動画編集・イラスト制作・ホームページ制作などの制作依頼ができます。"
                smallText="※依頼費用が全く無い方向けのプランもご用意しています。"
            />
            <Images src={movieIMG.src} style="margin-left:auto;" />
        </div>
    </Container>
</div>

