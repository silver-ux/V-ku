---
import Heading from "@components/Heading.astro";
import Container from "@layouts/Container.astro";
import ankenIMG from "@assets/vku_ankenka.png";
import TextBox from "@components/TextBox.astro";
import Images from "@components/Images.astro";
---

<div
    id="anken"
    style="width: 100%; height:100vh;padding-bottom: 50px; background-color:rgb(182, 182, 182)"
>
    <Container>
        <Heading>案件</Heading>
        <div
            style=" display:flex; flex-direction: column; align-items:center; height:calc(100% - 122px);"
        >
            <Images src={ankenIMG.src} style="margin-right:auto;" />
            <TextBox
                style="margin:0 0 0 auto"
                heading="案件の紹介が受けられます。"
                text="VTuberの方には「広告宣伝案件」を、クリエイターの方には「提携企業の制作案件」をご紹介します。"
                smallText="※V区民同士でコラボ、受発注も可能です。"
            />
        </div>
    </Container>
</div>

