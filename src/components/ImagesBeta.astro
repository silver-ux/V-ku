---
const { src, alt } = Astro.props;
---

<div class="image">
    <img src={src} alt={alt} />
</div>

<style>
    .image {
        width: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        /* margin-top: 2rem; */
        img {
            width: 100%;
            height: 100%;
            object-fit: contain;
        }
    }
</style>
